{
  // Required
  "manifest_version": 3,
  "name": "It will be replaced by the 'productName' of package.json.",
  "version": "It will be replaced by the 'version' of package.json.",
  "description": "It will be replaced by the 'description' of package.json.",
  "icons": {
    "16": "icons/icon-16x16.png",
    "48": "icons/icon-48x48.png",
    "128": "icons/icon-128x128.png"
  },
  "permissions": [
    "storage"
  ],
  // background
  "background": {
    "service_worker": "background.js"
  },
  // option
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  // Popup
  "action": {
    "default_popup": "popup/index.html"
  },
  // Content scripts
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contents/counter/index.js"
      ],
      "css": [
        "contents/counter/index.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}